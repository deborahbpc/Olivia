<!--header-->
<div class="heading d-flex justify-content-between align-items-center w-100">
  <div class="back-btn text-white ml-2">
    <%= link_to :back do %>
      <i class="fas fa-arrow-left"></i>
    <% end %>
  </div>
  <div class="pg-title">
    Novo anjo
  </div>
  <div>
  </div>
</div>
<!--fim do header-->
<div class="container">
  <div class="row pt-5 mt-5 d-flex justify-content-center">
    <div class="col-8 mt-3 align-items-center">
      <%= simple_form_for @angel do |f| %>
        <%= f.error_notification %>
        <%#= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :phone_number %>
        <%= f.input :email %>
        <%#= f.input :photo, :label => 'Send a image', as: :file %>
        <div class="row justify-content-center">
          <%= f.button :submit, class: "pink-btn m-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
