<%= simple_form_for(@review) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <%= f.input :is_disabled, label: "Quer desativar sua avaliação?", as: :radio_buttons, selected: true, checked: "Yes" %>
  <%= f.button :submit, "Desativar", data: { confirm: 'Tem certeza?' } %>
<% end %>
