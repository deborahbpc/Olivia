<!-- Card Wider -->
<div class="card card-cascade wider card-body-olli mapboxgl-popup-content">

  <!-- Card image -->
  <div class="view view-cascade overlay ">
    <%= cl_image_tag place.photo.key, class: "cad-img-top card-window-olli shadow-lg" %>
   <!--  <img class="card-img-top" src="https://mdbootstrap.com/img/Photos/Others/photo6.jpg" alt="Card image cap"> -->
