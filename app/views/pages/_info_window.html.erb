      <div class="mask rgba-white-slight"></div>
    </a>
  </div>

  <!-- Card content -->
  <div class="card-body card-body-cascade text-center card-body-olli">

    <!-- Title -->
    <h4 class="card-title card-title-olli"><strong> <%= place.name %> </strong></h4>
    <!-- Rating -->
    <a class="px-2 fa-lg li-ic"> <i class="fa fa-star" aria-hidden="true"></i> rating </a>
    <!-- Subtitle -->
    <h5 class="blue-text pb-2 card-subtitle-olli"><strong> <%= place.address %> </strong></h5>
    <!-- Text -->
    <p class="card-text"> <%= link_to 'ver local', place_path(place) %> </p>



    average_rating
