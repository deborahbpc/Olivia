<div class="justify-content-center">
  <div id="map"
     style="width: 100%; height: 85%; position: absolute; top: 65px; left:0px;"
     data-markers="<%= @markers.to_json %>"
     data-rmarker="<%= @rmarker.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <div class="row justify-content-center w-100 mx-auto" style="position:absolute; top: 140px;">
    <div class="px-1" >
      <%= link_to 'Perto de mim', near_me_path, class:"btn btn-light" %>
    </div>
    <div class="px-1">
      <%= link_to 'Top 5', top_places_path, class:"btn btn-light" %>
    </div>
    <div class="px-1">
      <%= link_to 'Recomendados', recommended_path, class:"btn btn-light" %>
    </div>
  </div>
</div>
