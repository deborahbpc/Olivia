<div class="d-flex justify-content-center">
  <div id="geocoder" class="geocoder row justify-content-center w-100 mx-auto" style="position:absolute; height: 50px;"></div>
  <div id="map"
     style="width: 100%; height: 100%; position: absolute; left:0px;"
     data-markers="<%= @markers.to_json %>"
     data-rmarker="<%= @rmarker.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <div class="row justify-content-between w-100 mx-auto px-2" style="position:absolute; top: 65px;">
    <div class="px-1" >
      <%= link_to 'PERTO DE MIM', near_me_path, class:"btn btn-sm btn-info py-1 px-3", style:"border-radius: 5px; font-weight: 500" %>
    </div>
    <div class="px-1">
      <%= link_to 'TOP 5', top_places_path, class:"btn btn-sm btn-info py-1 px-3", style:"border-radius: 5px; font-weight: 500; background-color:#FC6FB0; border: solid #FC6FB0 1px;" %>
    </div>
    <div class="px-1">
      <%= link_to 'RECOMENDADOS', recommended_path, class:"btn btn-sm btn-info py-1 px-3", style:"border-radius: 5px; font-weight: 500;" %>
    </div>
  </div>
</div>
