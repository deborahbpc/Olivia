<!DOCTYPE html>
<html>
  <head>
    <title>Ollivia</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>
  <body class='m-0'>
    <div data-controller="position"
    data-position-refresh-interval="60000"></div>
    <!--<% if alert %>
      <div class="flash-alert alert alert-dismissible fade show" role="alert" data-controller="alert" data-target="alert.message" data-alert-message="<%= alert %>">
        <span><%= alert %></span>
        <a data-action="alert#dismiss" data-dismiss="alert" aria-label="Close"><i class="fas fa-times"></i></a>
      </div>
    <% end %> 
    data-controller="alert" data-target="alert.message" data-alert-message="<%= alert %>"
    data-controller="alert" data-target="alert.message" data-alert-message="<%= notice %>"-->
    

    <div class="main-content" style="position: relative;">
      <% if alert %>
        <div class="toast" style="position: absolute; top: 30px; right: 0; z-index: 6;" data-autohide="false" aria-live="assertive" aria-atomic="true" role="alert">
          <div class="toast-header">
            <strong class="mr-auto">Atenção</strong>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="toast-body">
            <%= alert %>
          </div>
        </div>
      <% end %>

      <% if notice %>
        <div class="toast" style="position: absolute; top: 300px; right: 0; z-index: 6;" data-autohide="false" aria-live="polite" aria-atomic="true" role="status">
          <div class="toast-header">
            <strong class="mr-auto">Info</strong>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="toast-body">
            <%= notice %>
          </div>
        </div>
      <% end %>
      <%= yield %>
    </div>
    <div class="fixed-bottom">
      <%= render "shared/navbar"  %>
    </div>
  </body>
</html>
