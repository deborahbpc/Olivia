<div class="container">
  <div class="row justify-content-center">
    <%- if controller_name != 'sessions' %>
      <%= link_to "Fazer Login", new_session_path(resource_name) %><br />
    <% end %>
  </div>

  <!-- Forgot Password-->
  <div class="row justify-content-center">
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Esqueceu sua senha?", new_password_path(resource_name) %><br />
    <% end %>
  </div>

  <hr>
  <!-- Criar conta -->
  <div class="row justify-content-center">
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Criar conta", new_registration_path(resource_name) %><br />
    <% end %>
  </div>

  <div class="row justify-content-center">
    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to "Não recebeu instruções para confirmação?", new_confirmation_path(resource_name) %><br />
    <% end %>
  </div>

  <div class="row justify-content-center">
    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
    <% end %>
  </div>

  <div class="row justify-content-center">
    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to "Logar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><br />
      <% end %>
    <% end %>
  </div>
</div>
