<%#= link_to image_tag("menu/ollivia_rx.png"), company_path, class: "logo-nav" %>

<div class="container d-flex justify-content-center text-center mt-5 pt-5">
  <form class="form-signin">

    <div class="logo-nav mb-3">
      <h1 class="h3 font-weight-normal">Fazer Login</h1>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    label: false,
                    input_html: { autocomplete: "email", placeholder: "E-mail" } %>
        <%= f.input :password,
                    required: false,
                    label: false,
                    input_html: { autocomplete: "current-password", placeholder: "Senha secreta" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <!-- Btn Login-->
      <div class="form-actions btn-info btn btn-lg btn-primary btn-block">
        <%= f.button :submit, "Fazer Login", style: "color: white;" %>
      </div>
    <% end %>
  </form>

</div>

<div class="container container d-flex justify-content-center">

  <%= render "devise/shared/links" %>

</div>












